@model IEnumerable<Domain.Entities.Ecosystem>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-dark"><i><b>Ecosistemas</b></i></h3>
<h4 style="color:red">@ViewBag.Error</h4>
<br />
<hr />
<h6 class="text-dark"><b><a class="btn btn-primary" asp-action="AddEcosystem">Nuevo Ecosistema</a></b></h6>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Coordenadas</th>
            <th>Área</th>
            <th>Descripción</th>
            <th>Nivel de Seguridad</th>
            <th>Estado de conservación</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EcosystemName.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeoDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EcoDescription.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Security)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EcoConservation.ConservationName.Value)
                </td>
                <td>
                    <img src="/img/Ecosystems/@item.ImgRoute" height="60" />
                </td>
                <td>
                    @Html.ActionLink("Borrar", "Delete", new {id = item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
